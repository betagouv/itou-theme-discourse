{{#if categories}}
  {{#if filteredCategories}}
    <table class="category-list {{if showTopics "with-topics"}}">
      <thead>
        <tr>
          <th class="category"><span aria-role="heading" aria-level="2" id="categories-only-category">Les cat√©gories</span></th>
          <th class="topics">&nbsp;</th>
        </tr>
      </thead>
      <tbody aria-labelledby="categories-only-category">
        {{#each categories as |category|}}
          {{parent-category-row category=category showTopics=showTopics}}
        {{/each}}
      </tbody>
    </table>
  {{/if}}
{{/if}}

{{plugin-outlet name="below-categories-only" tagName="" args=(hash categories=categories showTopics=showTopics)}}
